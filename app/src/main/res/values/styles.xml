<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GalQQ.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background colors - 使用明确的颜色值确保可见性 -->
        <item name="android:windowBackground">@color/galqq_background_light</item>
        <item name="android:colorBackground">@color/galqq_background_light</item>
        <item name="backgroundColor">@color/galqq_background_light</item>
        
        <!-- Primary colors -->
        <item name="colorPrimary">#FF4285F4</item>
        <item name="colorPrimaryDark">#FF3367D6</item>
        <item name="colorAccent">#FF4285F4</item>
        <item name="colorPrimaryVariant">#FF4285F4</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">#FF4285F4</item>
        <item name="colorSecondaryVariant">#FF4285F4</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Surface colors (用于卡片、对话框等) -->
        <item name="colorSurface">@color/galqq_background_light</item>
        <item name="colorOnSurface">#FF202124</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/galqq_background_light</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Window properties -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">#FF202124</item>
        <item name="android:textColorSecondary">#FF5F6368</item>
        <item name="colorControlNormal">#FF202124</item>
        
        <!-- Preference 相关样式 -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
</resources>
